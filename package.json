{
  "name": "belief-code-typer",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "vite --open",
    "dev:backend": "convex dev",
    "build": "vite build",
    "lint": "tsc -p convex -noEmit --pretty false && tsc -p . -noEmit --pretty false && convex dev --once && vite build",
    "deploy": "npm run build && vercel",
    "preview:prod": "vite build && serve -s dist",
    "deploy:prod": "npm run build && vercel --prod"
  },
  "dependencies": {
    "@getbrevo/brevo": "^3.0.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@sparticuz/chromium": "^138.0.2",
    "@vercel/analytics": "^1.5.0",
    "@vercel/node": "^2.3.0",
    "@vercel/speed-insights": "^1.2.0",
    "jspdf": "^3.0.1",
    "jszip": "^3.10.1",
    "nodemailer": "^7.0.5",
    "pdf-lib": "^1.17.1",
    "puppeteer": "^24.16.2",
    "puppeteer-core": "^24.16.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^1.5.0"
  },
  "devDependencies": {
    "@types/jspdf": "^2.0.0",
    "@types/jszip": "^3.4.1",
    "@types/node": "^20.14.9",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.19",
    "convex": "^1.25.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.2.2",
    "vite": "^7.1.1"
  }
}
